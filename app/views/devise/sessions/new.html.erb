<div class="container-fluid">
  <div class="row" id="new-beer-container">
    <div class="col-md-4 col-md-offset-4" id="new-beer-area">
      <h2 class="page-title"><u>Hop To It!</u></h2>
      <h3 class="page-title">Log In</h3>
      
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }, wrapper: :horizontal_form) do |f| %>
        <%= f.error_notification %>
      
        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :password, required: true %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
      
        <div class="form-actions user-buttons">
          <%= f.button :submit, "Log In", class: "sign-up-button btn-info" %>
        </div>
      <% end %>
      <div class="shared-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

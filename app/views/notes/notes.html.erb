<div class="container-fluid">
  <div class="row" id="notes-container">
    <div class="col-md-10 col-md-offset-1" id="notes-area">
      <table class="table table-hover table-condensed">
        <thead>
          <tr>
            <th>Beer</th>
            <th>Brewery</th>
            <th>Style</th>
            <th>Rating</th>
            <th>Notes</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @notes.each do |note| %>
            <tr>
              <td><%= note[:name] %></td>
              <td><%= note[:brewery] %></td>
              <td><%= note[:style] %></td>
              <td><%= note[:rating] %></td>
              <td><%= note[:notes] %></td>
              <td>Action here</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
